@{
    Layout = "~/Views/Shared/_LayoutComment.cshtml";
    ViewBag.Title = "Comment";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.UserData

<section role="main" class="content-body card-margin">
    <header class="page-header">
        <h2>Комментарий</h2>

        <div class="right-wrapper text-end">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="bx bx-home-alt"></i>
                    </a>
                </li>

                <li><span>Forms</span></li>

                <li><span>Layouts</span></li>

            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col-lg-6">
            <form>
                <section class="card">
                    <header class="card-header">
                        <h2 class="card-title">Form without labels</h2>

                        <p class="card-subtitle">
                            You can use placeholders instead of label like this example.
                        </p>
                    </header>

                    <div class="card-body">
                        <div class="row form-group mb-3">
                            <div class="col-sm-12 col-md-4 pb-sm-3 pb-md-0">
                                <input type="text" name="firstName" placeholder="First Name" class="form-control">
                            </div>

                            <div class="col-sm-12 col-md-4 pb-sm-3 pb-md-0">
                                <input type="email" name="lastName" placeholder="Last Name" class="form-control">
                            </div>

                            <div class="col-sm-12 col-md-4 pb-sm-3 pb-md-0">
                                <input type="email" name="email" placeholder="Your Email" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <textarea class="form-control" rows="5" placeholder="Type your message"></textarea>
                            </div>
                        </div>
                    </div>
                    <footer class="card-footer text-end">
                        <button class="btn btn-primary">Add Comment</button>
                    </footer>
                </section>
            </form>
        </div>      
    </div>
</section>
    <!-- end: page -->