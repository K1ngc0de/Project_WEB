 ﻿@using eUseControl.Web.Extensions

<div class="header">
    <div class="logo-container">
        <a href="../4.0.0" class="logo">
            <img src="img/logo3.png" width="168" height="42" alt="Porto Admin" />
        </a>

        <div class="d-md-none toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
            <i class="fas fa-bars" aria-label="Toggle sidebar"></i>
        </div>

    </div>



    <!-- start: search & user box -->
    <div class="header-right">

        <form action="pages-search-results.html" class="search nav-form">
            <div class="input-group">
                <input type="text" class="form-control" name="q" id="q" placeholder="Найти...">
                <button class="btn btn-default" type="submit"><i class="bx bx-search"></i></button>
            </div>
        </form>

        <span class="separator"></span>

        <div class="userbox">
            <a href="#" data-bs-toggle="dropdown">
                @if (Session.IsUserLoggedIn())
                {
                    <span class="user_info">
                        <span class="name">@ViewBag.SessionUser.Name</span>
                        <span class="role">
                            @ViewBag.SessionUser.Role
                        </span>

                    </span>
                }
                else
                {
                    <a href="@Url.Action("Login", "Auth")">
                        <div class="button secondary">Login</div>
                    </a>
                    <a href="@Url.Action("Register", "Auth")">
                        <div class="button primary">Registration</div>
                    </a>
                }
            </a>
        </div>
        <span class="separator"></span>
        @Html.ActionLink("Выйти", "Logout", "Auth")
    </div>
</div>
<!-- end: search & user box -->
